<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView android:id="@+id/product_image_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/product_image"
            app:layout_constraintBottom_toBottomOf="@id/product_image"
            android:layout_marginLeft="@dimen/margin_normal"
            android:maxLines="1"
            android:minLines="1"
            android:background="@drawable/rectangle_round_corner_3dp"
            android:textSize="@dimen/font_size_tiny"
            android:textStyle="bold"
            android:textColor="@color/white_100"
            android:padding="@dimen/margin_tiny"
            android:textAllCaps="true"
            android:text="Buy 2 save 15%"/>

        <TextView android:id="@+id/product_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_image"
            android:maxLines="3"
            android:minLines="3"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_normal"
            tools:text="RedMart Extra Virgin Olive Oil"/>

        <TextView android:id="@+id/product_wt_vol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_tiny"
            android:paddingBottom="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:maxLines="1"
            android:minLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_title_text"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/black_38"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="260 g"/>

        <TextView android:id="@+id/product_expiry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:maxLines="1"
            android:minLines="1"
            android:background="@drawable/rectangle_round_corner_3dp"
            app:layout_constraintLeft_toRightOf="@+id/product_wt_vol_text"
            app:layout_constraintTop_toBottomOf="@+id/product_title_text"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/white_100"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="2D+"/>

        <TextView android:id="@+id/product_frozen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:maxLines="1"
            android:minLines="1"
            android:background="@drawable/rectangle_round_corner_3dp"
            android:textSize="15sp"
            android:textColor="@color/white_100"
            app:layout_constraintLeft_toRightOf="@+id/product_expiry_text"
            app:layout_constraintTop_toBottomOf="@+id/product_title_text"
            android:visibility="gone"
            android:text="@string/emoji_snow"
            tools:visibility="visible"/>

        <TextView android:id="@+id/product_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:maxLines="1"
            android:minLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_wt_vol_text"
            android:textStyle="bold"
            tools:text="$1.80"/>

        <View android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/windowBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_price_text"
            app:layout_constraintRight_toRightOf="parent" />

        <Button android:id="@+id/product_add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/add_to_cart"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>